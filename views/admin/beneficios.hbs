<div class="conteiner" style="margin-top: 20px">
    <div class=" row">
        <div class="col-6">
            <p class="text-start ps-5">BIENVENIDOS A ENERGIA, {{persona}}!!</p>
        </div>
        <div class=" col-6 text-end">
            <a href="/admin/login/logout" class="btn btn-danger"> Cerrar sesion <i class="fas fa-sing-out-alt"></i></a>

        </div>
    </div>

    <div class="row">
        <div class="col" style="margin-top: -9px">
            <h2>LISTADO DE BENEFICIOS</h2>
            <div>
                <div class="col text-end">
                    <a href="/admin/beneficios/agregar" class="btn btn-success"><i class="fas fa-plus">NUEVO</i></a>
                </div>
            </div>

        </div>

    </div>
</div>
<div class="container-xl">
    <div class="row ">
        <div class="col">
            <table class="table">
                <thead>
                    
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" class="text-end">Acciones</th>
                       
                    </tr>
                  
                </thead>
                <tbody>
                     {{#each beneficios}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/beneficios/eliminar/{{id}}" class=" btn btn-dark"><i class="fa-solid fa-trash"></i></a>
                            <a href="/admin/beneficios/modificar/{{id}}" class="btn btn-dark"><i class="fa-solid fa-pen"></i></a>
                        </td>
                    
                    </tr>
                     {{/each}}
                    
                    
                
                </tbody>
            </table>

        </div>

    </div>
</div>